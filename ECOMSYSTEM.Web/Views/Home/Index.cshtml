@model IEnumerable<ECOMSYSTEM.Shared.Models.ProductDetails>
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en" dir="">

<head>
    <script src="~/js/OrderDoc.js"></script>
    <script src="~/js/ItemCartDoc.js"></script>
    <script src="~/js/CustomizeProductDoc.js"></script>

</head>

<body class="text-left">
      
            <!-- ============ Body content start ============= -->
            <div class="main-content">
                <div class="breadcrumb">
                    @*<h1 class="mr-2">Version 1</h1>*@
                    <ul>
                        <li><a href="">Home</a></li>
                        <li>Welcome to the Tech Wave..</li>
                    </ul>
                </div>

                <div class="col-lg-12">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4">
                                <div class="card mb-4 o-hidden">
                                    <img class="card-img-top" src="@("~/Image/"+item.ImageName)" asp-append-version="true" />
                                    <div class="card-body">
                                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.ProductName)</h5>
                                        <p class="card-text"> @Html.DisplayFor(modelItem => item.Description)</p>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                <li class="list-group-item">Starting From Rs.@Html.DisplayFor(modelItem => item.Price).00</li>
                                    </ul>
                                    <div class="card-body"><button class="btn btn-primary btn-block btn-rounded mt-2 float-right"  onclick="CustomizationBtn_Click(@item.ProductId);">View & Customize</button></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- end of main-content -->
            </div>
           

    <!--  Modal -->
    <div class="modal fade bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle-2">Customization</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-4 o-hidden">
                                <img class="card-img-top" id="Image" />
                                <div class="card-body">
                                    <h5 class="card-title" id="Productname"></h5>
                                    <p class="card-text" id="Description"></p>
                                    <p class="card-text" id="ProductId" hidden='hidden'></p>
                                </div>
                                 @* <ul class="list-group list-group-flush">
                                     <li class="list-group-item" id="Price"></li>
                                 </ul> *@
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Category">Processor</label>
                                <select class="form-control form-control-rounded" onchange="Price()" name="ProductCategoryId" id="Processor">
                                    <option value=0>Select</option>
                                    <option value=40000>i3</option>
                                    <option value=40000>i5</option>
                                    <option value=55000>i7</option>
                                    <option value=75000>i9</option>
                                    <option value=75000>Ryzen 3</option>
                                    <option value=75000>Ryzen 5</option>
                                    <option value=75000>Ryzen 7</option>

                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Category">Motherboard</label>
                                <select class="form-control form-control-rounded" onchange="Price()" name="ProductCategoryId" id="Motherboard">
                                    <option value=0>Select</option>
                                    <option value=55000>Asus</option>
                                    <option value=55000>MSI</option>
                                    <option value=45000>Gigabyte</option>
                                    <option value=45000>ASRock</option>

                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Category">RAM</label>
                                <select class="form-control form-control-rounded" onchange="Price()" name="ProductCategoryId" id="RAM">
                                    <option value=0>Select</option>
                                    <option value=20000>Kingston 8GB DDR4</option>
                                    <option value=20000>Corsair 8GB DDR4</option>
                                    <option value=20000>Transcend 8GB DDR4</option>
                                    <option value=32000>Kingston 16GB DDR4</option>
                                    <option value=45000>Kingston 32GB DDR4</option>
                                    <option value=45000>Transcend 64GB DDR4</option>
                                    <option value=45000>Kingston 128GB DDR4</option>                                  
                                    <option value=32000>Kingston 16GB DDR5</option>
                                    <option value=32000>Corsair 16GB DDR5</option>
                                    <option value=32000>Kingston 16GB DDR5</option>
                                    <option value=45000>Kingston 32GB DDR5</option>
                                    <option value=45000>Corsair 32GB DDR5</option>
                                    <option value=45000>Kingston 32GB DDR5</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Category">VGA</label>
                                <select class="form-control form-control-rounded" onchange="Price()" name="ProductCategoryId" id="VGA">
                                    <option value=0>Select</option>
                                    <option value=24000>MSI GEFORCE GTX 1650 4GB</option>
                                    <option value=50000>PNY GeForce RTX™ 3050 6GB</option>
                                    <option value=75000>GIGABYTE RTX 3050 Gaming OC 8GB</option>
                                    <option value=75000>NVIDIA GeForce RTX 4090 24GB</option>
                                    <option value=75000>AMD Radeon RX 7900 XTX 24GB</option>
                                    <option value=75000>AMD Radeon RX 6700 XT 12GB</option>
                                    <option value=75000>NVIDIA GeForce GTX 1660 Super 6GB</option>
                                    <option value=75000>MSI GEFORCE RTX 3050 VENTUS 2X XS 8GB </option>

                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Category">HDD</label>
                                <select class="form-control form-control-rounded" onchange="Price()" name="ProductCategoryId" id="HDD">
                                    <option value=0>Select</option>
                                    <option value=13000>Toshiba 500GB</option>
                                    <option value=35000>Toshiba 1TB</option>
                                    <option value=35000>Toshiba 2TB</option>
                                    <option value=45000>Western Digital 1TB</option>
                                    <option value=45000>Western Digital 2TB</option>
                                    
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Category">SSD</label>
                                <select class="form-control form-control-rounded" onchange="Price()" name="ProductCategoryId" id="SSD">
                                    <option value=0>Select</option>
                                    <option value=13000>Kingston 128GB</option>
                                    <option value=35000>Kingston 256GB</option>
                                    <option value=45000>Kingston 512GB</option>
                                    <option value=45000>Sandisk 256GB</option>
                                    <option value=45000>Sandisk 512GB</option>


                                </select>
                            </div>
                            <br />
                            <div class="form-group">
                                <label for="Category">Quantity</label>
                                <select class="form-control form-control-rounded" onchange="Price()" name="ProductCategoryId" id="QTY">
                                    <option value=1>1</option>
                                    <option value=2>2</option>
                                    <option value=3>3</option>
                                    <option value=4>4</option>
                                    <option value=5>5</option>
                                </select>
                            </div>
                            <br />                       
                            <h5>Please Note: Our suppliers ensure compatibility of selected parts and will contact you to confirm details.</h5>
                            <div class="form-group" hidden='hidden'>
                                <label for=""> <h2>Total Amount: <label id="totalPrice"> </label> </> </h2></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                    <button class="btn btn-primary ml-2" type="button" onclick="AddtoCartBtn_Click();">Add to cart</button>
                </div>
            </div>
        </div>
    </div>

    <!--  Modal -->
    <div class="modal fade bd-example-modal-lg" id="orderList" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle-2">Order List</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-4 o-hidden">
                                <img class="card-img-top" id="Image" />
                                <div class="card-body">
                                    <h5 class="card-title" id="Productname"></h5>
                                    <p class="card-text" id="Description"></p>
                                    <p class="card-text" id="ProductId" hidden='hidden'></p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item" id="Price"></li>
                                </ul>
                            </div>
                        </div>
                        <div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</body>

</html>